<form method="post" accept-charset="utf-8">
  <div class="col-xs-offset-0 col-xs-12 col-sm-offset-1 col-sm-10">
    <div class="form-group">
      <h3>
        <label for="rsvp-code">What is your RSVP code?</label>
      </h3>
      <input type="text" name="token" id="token" value="" class="form-control"/>
    </div>
    <div class="errors">
      {{#errors}}
      <div class="error form-group">{{error}}</div>
      {{/errors}}
    </div>
    <div class="form-group">
      <input type="submit" value="Continue">
    </div>
  </div>
</form>
